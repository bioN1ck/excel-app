{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "out-tsc",
    "moduleResolution": "node",
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "paths": {
      "@core/*": ["src/core/*"],
      "@components/*": ["src/components/*"],
      "@models/*": ["src/models/*"],
      "@utils": ["src/core/utils.ts"]
    },
    "lib": [
      "DOM",
      "ESNext"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "files": [
    "src/index.ts"
  ]
}